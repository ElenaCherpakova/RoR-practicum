<!DOCTYPE html>
<html>
<head>
  <title>TripTag</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js' %>
  <%= javascript_importmap_tags %>
  <%= turbo_include_tags %>

</head>
<body>
     
   <%=render 'layouts/navbar'%>

 <% if user_signed_in? %>
    <p class="m-0 mr-2">Welcome, <strong><%= current_user.email %></strong>!</p>
    <div class="ms-md-2 ms-auto mt-2 mt-md-0">
      <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-light"%>
    </div>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "Login", new_user_session_path, class: "btn btn-primary mx-2" %>
  <% end %>
    <main>
      <%= yield %>
    </main>
 
  </div>
</body>
</html>
